<div class="grid" id="main">     <!-- principal -->
    <div id="arsValue" class="grid-2 gap margin-top">
        <p class="inline" style="margin-top: 35px;"><img src="img/crypto/argentine-peso.png" width="32" height="32" /></p>
        <div>
            <p>Importe a pagar (AR$)</p>
            <input type="text" class="light rounded" name="moneyQuantity" id="moneyQuantity" autocomplete="off" placeholder="PESOS">
        </div> 
    </div>
    <div id="btcValue" class="grid-2 gap margin-top">
        <p class="inline" style="margin-top: 35px;"><img src="img/crypto/btc.png" width="32" height="32" /></p>
        <div>
            <p>Recibes en BTC</p>
            <input type="text" class="light rounded" id="cryptocurrencyQuantity" name="amount" autocomplete="off" placeholder="BTC" value="{{cryptocurrency.min}}" class="text-right">
        </div>
    </div>
    <p id="success" class="text-legend text-center">¡Bien! Esto cumple con el monto mínimo de 0.01 BTC</p>
    <p id="warn" class="text-legend">El monto mínimo es de 0.01 BTC, ¡compra un poco más!</p>
    <p class="text-center"><a href="/help/commission">Precios finales con comisiones incluídas</a>.</p>
    <div id="selector" class="grid-2 gap container center">
        <button type="button" class="light margin-top rounded" disabled="true">Atrás</button>
        <button type="button" class="light margin-top rounded" id="nextBtn1" onclick="step_showWallet();" disabled="true">Siguiente</button>
    </div>
    
</div>                                      <!-- !principal -->
<!-- Información para sendEmail -->
<input type="hidden" value="Tu compra de {{cryptocurrency.name}} en Teslabit" name="subject" />
