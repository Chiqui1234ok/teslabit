<div class="full-width full-height hero1 grid">
    <div class="container center">
        <form action="/user/sign-up" method="POST" class="center login box blur rounded padding"> <!-- Formulario de cuenta -->
            <div class="center" style="width: 30%;"><img src="img/logo.jpg" width="100%" style="border-radius: 100%;" /></div>
            <h3 class="text-center">Registrarse en Teslabit</h3>
            <input type="text" placeholder="E-mail" name="email" id="email" class="full-width margin-bottom light rounded" required autofocus />
            <input autocomplete="new-password" type="password" placeholder="Contraseña" name="password1" id="password1" class="full-width margin-bottom light rounded" required />
            <input autocomplete="new-password" type="password" placeholder="Confirmá tu contraseña" name="password2" id="password2" class="full-width margin-bottom light rounded" required />
            <!-- <p>(Google Captcha aquí)</p> implementación: https://www.npmjs.com/package/express-recaptcha#installation -->
            <input type="submit" value="Registrarme" id="submitBtn" class="full-width margin-bottom light rounded" />
            <p>¿Ya tienes una cuenta? <a href="/user/sign-in">Ingresar</a></p>
        </form>
    </div> 
</div>
<script src="js/sign-up-control.js"></script>