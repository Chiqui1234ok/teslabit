<div id="contact" class="full-screen grid padding">
    <div class="grid-2 center container">
        <div id="contacto" class="block full-width" style="height: 50px;margin-top: -50px;text-shadow: none;"></div>
        <h1 class="text-center night-text full-width">Contacto</h1>
        <form action="/send-email" method="POST" class="margin-top block full-width grid-2 super-gap">
            <div>
                <input type="text" placeholder="Asunto" name="subject" class="night block full-width padding rounded margin-bottom" />
                <input type="text" placeholder="Tu e-mail" name="email" class="night block full-width padding rounded margin-bottom" required />
            </div>
            <div class="grid gap">
                <textarea class="night block full-width padding rounded margin-bottom" style="min-height: 200px" placeholder="Tu mensaje" name="message" required></textarea>
                <div class="container center"><img src="https://developers.google.com/recaptcha/images/newCaptchaAnchor.gif" alt="" width="100%" /></div>
                <input type="submit" value="Enviar email" class="block full-width padding night rounded" />
            </div>
        </form>
    </div>
</div>
<script src="js/sign-in-control.js"></script>
